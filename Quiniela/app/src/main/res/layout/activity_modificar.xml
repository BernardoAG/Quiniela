<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Modificar">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:padding="5dp">
        >

        <TextView
            android:id="@+id/txTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificar datos de cuenta"
            android:textAlignment="center"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:padding="15dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo nombre de usuario:" />

        <EditText
            android:id="@+id/txUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Username" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo correo:" />

        <EditText
            android:id="@+id/txMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />
        <TextView
            android:id="@+id/txtPswO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña anterior:" />

        <EditText
            android:id="@+id/txPswO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/txtPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nueva contraseña:" />

        <EditText
            android:id="@+id/txPsw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />
        <TextView
            android:id="@+id/txtPsw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmar contraseña:" />

        <EditText
            android:id="@+id/txPsw2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirmo cambiar datos de mi cuenta" />

        <Button
            android:id="@+id/btModify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modificar" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>