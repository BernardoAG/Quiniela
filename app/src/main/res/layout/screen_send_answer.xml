<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="SelecciÃ³na un equipo para cada partido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/sp_match_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/partido_1"
            tools:listitem="@android:layout/simple_expandable_list_item_1"
            > </Spinner>

        <Spinner
            android:id="@+id/sp_match_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/partido_2"
            tools:listitem="@android:layout/simple_expandable_list_item_1"
            > </Spinner>

        <Spinner
            android:id="@+id/sp_match_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/partido_3"
            tools:listitem="@android:layout/simple_expandable_list_item_1"
            > </Spinner>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar" />

    </LinearLayout>

    <ProgressBar
        android:indeterminate="true"
        android:id="@+id/loading_indicator"
        android:visibility="gone"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>