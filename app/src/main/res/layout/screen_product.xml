<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scan.product_name"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_product_trademark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard">

                <AutoCompleteTextView
                    android:id="@+id/et_product_trademark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scan.product_trademark"
                    android:inputType="textCapWords" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_product_quantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/spacing_standard"
                    android:layout_marginLeft="@dimen/spacing_standard"
                    android:layout_marginRight="@dimen/spacing_standard"
                    android:layout_marginStart="@dimen/spacing_standard"
                    android:layout_marginTop="@dimen/spacing_standard"
                    android:layout_weight=".6">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_product_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/scan.product_quantity"
                        android:inputType="numberDecimal" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/sp_quantity_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/et_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/scan.product_price"
                    android:inputType="numberDecimal" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxmicro"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <Switch
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:paddingLeft="@dimen/spacing_medium"
                    android:paddingStart="@dimen/spacing_medium"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:text="Â¿Viene en paquete?" />

                <view
                    android:layout_weight=".2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>

                <Spinner
                    android:enabled="false"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    tools:listitem="@android:layout/simple_list_item_1" />
            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginStart="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_xxmicro"
                android:background="@color/colorPrimary" />

            <Button
                android:id="@+id/bt_front_picture"
                style="@style/Button.Green.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard"
                android:text="@string/scan.take_front_picture_button" />

            <Button
                android:id="@+id/bt_back_picture"
                style="@style/Button.Green.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard"
                android:text="@string/scan.take_back_picture_button" />

            <Button
                android:id="@+id/bt_nutrition_picture"
                style="@style/Button.Green.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:layout_marginTop="@dimen/spacing_standard"
                android:text="@string/scan.take_nutrition_picture_button" />

            <Button
                android:layout_marginTop="@dimen/spacing_medium"
                android:id="@+id/bt_save"
                style="@style/Button.Red.Round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_standard"
                android:layout_marginEnd="@dimen/spacing_standard"
                android:layout_marginLeft="@dimen/spacing_standard"
                android:layout_marginRight="@dimen/spacing_standard"
                android:layout_marginStart="@dimen/spacing_standard"
                android:text="@string/scan.save_button" />
        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone" />

</FrameLayout>
